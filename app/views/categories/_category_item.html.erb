<li id="category_<%= category.id %>">
  <ul>
    <li class="category_name"><%= link_to category.name, edit_category_path(category) %></li>
    <li class="primary_action guided"><%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %></li>
    <%= render :partial => 'shared/sort_handle' %>
  </ul>
  <% if category.categories.length > 0 %>
    <ul class="sorted_list" id="categories">
    <% category.categories.each do |nested_category| %>
        <%= render :partial => 'category_item', :locals => {:category => nested_category} %>
    <% end %>
    </ul>
  <% end %>
</li>