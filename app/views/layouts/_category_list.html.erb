<ul class="category_list">
  <% categories.each do |category| %>
    <li><%= link_to category.name, category_browse_path(category.guid) %>
      <% if category.categories.length > 0 %>
      <ul>
        <% category.categories.each do |nested_cat| %>
          <li><%= link_to nested_cat.name, category_browse_path(nested_cat.guid) %></li>
        <% end %>
      </ul>
      <% end %>
    </li>
  <% end %>
</ul>