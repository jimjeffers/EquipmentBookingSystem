<% prefix = '' unless prefix %>
<% form_tag('/equipment/add_to_cart') do %>
  <h3>Book This Item</h3>
  <ul class="form">
    <%= render :partial => 'layouts/availability_fields.html', :locals => {:prefix => prefix} %>
    <%=  hidden_field_tag :item_id, item.id %>
    <li class="search_field_quantity search_field_date">
      <%= label_tag :available_quantity, "Quantity" %>
      <%= select_tag :available_quantity, (0..4).to_a.map { |i| "<option value=\"#{i}\">#{i}</option>" }.join('') %>
    </li>
    <li class="unavailable">
      <p>We're sorry this item is not available during this time.</p>
    </li>
    <% if current_user && current_user.has_role?(:teacher) %><a href="#" class="pull_request">Pull Request</a><% end %>
    <li class="search_field_availability_submit">
      <%= submit_tag "Add To Cart" %>
    </li>
  </ul>
<% end %>