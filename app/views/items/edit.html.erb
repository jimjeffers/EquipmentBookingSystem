<h4 class="primary_action guided"><%= link_to 'Or Return to Items Index', items_path %></h4>
<h1>Editing Item: <%= @item.name %></h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>
  <ul class="form">
    <%= render :partial => 'item_form', :locals => {:f => f} %>
    <li>
      <%= f.submit 'Update' %>
    </li>
  </ul>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>