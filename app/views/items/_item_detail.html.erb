<!-- item_<%= item.id %>: <%= item.name %> -->
<li id="item_<%= item.id %>" class="item">
  <h3 class="item_name"><%= link_to item.name, edit_item_path(item) %></h3>
  <a href="#" class="item_photo"><img src="/images/samples/sample_sd2.jpg" width="115" height="115" alt="Cannon EOS 50-D"/></a>
  <h4>Includes:</h4>
  <ul class="included_items">
    <li>Memory Card Case</li>
  </ul>
  <ul class="action_list">
    <li class="primary_action"><%= link_to 'Edit', edit_item_path(item) %></li>
    <li class="primary_action delete guided"><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></li>
  </ul>
</li>